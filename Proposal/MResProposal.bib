file = {:home/ojs19/Documents/CMEECourseWork/ResearchProject/Readings/117693430700300024.pdf:pdf},
issn = {11769343},
journal = {Evolutionary Bioinformatics},
keywords = {Biodiversity conservation,Extinction,Phylogenetic diversity,Shapley index},
pages = {237--244},
pmid = {19461983},
title = {{Hedging our bets: The expected contribution of species to future phylogenetic diversity}},
volume = {3},
year = {2007}
}
