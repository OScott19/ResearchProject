file = {:home/ojs19/Documents/CMEECourseWork/ResearchProject/Readings/Chang{\_}et{\_}al-2019-Methods{\_}in{\_}Ecology{\_}and{\_}Evolution.pdf:pdf},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Actinopterygii,fossil calibration,macroevolution,open data,phylogenetics,ray-finned fishes,reproducible research},
number = {7},
pages = {1118--1124},
title = {{An r package and online resource for macroevolutionary studies using the ray-finned fish tree of life}},
volume = {10},
year = {2019}
